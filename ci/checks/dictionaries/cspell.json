{
    "version": "0.1",
    "language": "en",
    "dictionaryDefinitions": [
        {
            "name": "workspace",
            "path": "./workspace_dictionary.txt",
            "description": "Custom workspace dictionary",
            "addWords": true,
            "scope": "workspace"
        },
        {
            "name": "nix",
            "path": "./nix_dictionary.txt",
            "description": "Nix dictionary",
            "addWords": true,
            "scope": "nix"
        },
        {
            "name": "names",
            "path": "./names_dictionary.txt",
            "description": "Names of people and projects dictionary",
            "addWords": true,
            "scope": "nix"
        }
    ],
    "dictionaries": ["cpp", "bash", "python", "ruby", "workspace", "nix", "names"],
    "ignorePaths": ["ci/checks/dictionaries/spelling_corrections.txt",
                    "*deps.nix",
                    "*gemset.nix",
                    "*Gemfile.lock",
                    "*node-packages.nix",
                    "*node-env.nix",
                    "*package-lock.json",
                    "*yarn_deps.nix",
                    "*yarn.lock",
                    "*CMakeLists.txt.user",
                    "build*"]
}
